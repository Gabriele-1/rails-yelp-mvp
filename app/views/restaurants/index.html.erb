

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <%@restaurants.each do |restaurant| %>
        <div class="col">
          <div class="card shadow-sm">
            <%# <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title><%= restaurant.name  %>
            <%# </title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> %>

            <div class="card-body">
            <h4 class="text-center"><%= restaurant.name  %></h4>
              <p class="card-text">Id: <%= restaurant.id  %></p>
              <p class="card-text">Phone number: <%= restaurant.phone_number  %></p>
              <p class="card-text">Address: <%= restaurant.address  %></p>
              <p class="card-text">Category: <%= restaurant.category  %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                <%= link_to 'Go to restaurant', restaurant_path(restaurant), class:"btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Edit restaurant', edit_restaurant_path(restaurant), class:"btn btn-sm btn-outline-secondary" %>
                </div>

              </div>
            </div>
          </div>
        </div>
<%end  %>





      </div>
    </div>
  </div>
